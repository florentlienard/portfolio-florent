  <div class="left">
    <%= link_to image_tag("logo.svg"), "/", id: "active-tab", class: "navbar-wagon-item navbar-wagon-link" %>
  </div>
  <!-- Right Navigation -->
  <div class="right">
    <%= link_to "Contact", "contact", class: "right-item" %>
  </div>
</div>
